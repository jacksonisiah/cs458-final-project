@model FinalProject.MVC.Models.ApplicationUser

@{
    ViewData["Title"] = Model.DisplayName ?? Model.UserName;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img src="@Model.ProfilePicture" class="img-fluid rounded-circle mb-3" alt="Profile picture" style="max-width: 200px;">
                    }
                    <h2>@(Model.DisplayName ?? Model.UserName)</h2>
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <p class="text-muted">@Model.Bio</p>
                    }
                    @if (User.Identity?.Name == Model.UserName || User.IsInRole("Admin"))
                    {
                        <a asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-primary">Edit Profile</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>